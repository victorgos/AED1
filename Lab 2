#include <stdlib.h>

int main(){
int a = 40;
int *p;
p = &a;
printf("Endereco de a: %d\n", &a);
printf("Endereco de a com ponteiro: %d\n",p);
scanf("%d",p);
printf("%d",a);
return 0;
}

